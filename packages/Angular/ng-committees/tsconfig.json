{
  "compilerOptions": {
    "module": "ES2022",
    "target": "ES2022",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "skipLibCheck": true,
    "lib": ["ES2022", "dom"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
